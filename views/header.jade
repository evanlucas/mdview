doctype 5
html
  head
    link(rel='stylesheet', href=stylesheet)
    style.
      ul.theme {
        list-style: none;
        margin: 0;
        padding: 0;
        text-decoration: none;
        display: block;
      }

      ul.theme li {
        text-decoration: none;
        display: inline;
        width: auto;
        margin-left: 10px;
        margin-right: 10px;
      }
    title #{title}
  body
    .container
      h3 MDView - a simple markdown viewer
      - if (theme === 'custom')
        h6 Using a <em class="theme-name">custom</em> theme
      - else
        h6 Using the <em class="theme-name">#{theme}</em> theme
      h6 Available Themes
      != switchTheme
      table.table.files
        thead
          tr
            th Files
        tbody
          - each file in files
            tr
              td
                a(href='/'+file) #{file}
      block mainContent
      include copyright
    script(type='text/javascript', src='//code.jquery.com/jquery-1.10.2.min.js')
    script(type='text/javascript', src='/js/index.js')